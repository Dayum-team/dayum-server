<?xml version="1.0" encoding="UTF-8" ?>
<configuration scan="true" scanPeriod="60 seconds">

    <property name="CONSOLE_LOG_PATTERN"
              value="%highlight(%-5level) %green(%d{yyyy-MM-dd HH:mm:ss}) [%magenta(%thread) - %X{trace_id}] [%cyan(%logger{0}:%line)] - %yellow(%msg%n)"/>

    <logger name="api.access" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <springProfile name="local, prod">
        <include resource="console-appender.xml"/>
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>
    <timestamp datePattern="yyyy-MM-dd" key="DATE"/>
</configuration>
